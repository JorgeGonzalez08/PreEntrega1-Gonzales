</div>
<div class="container">
    <a class="container__button" href="/api/sessions/current">Ir al perfil</a>
     <a class="container__button" href="/carts/{{cid}}">ir al carrito</a>
</div>
<div class=" paginateContainer" id="dataCart" data-cart-id="{{cid}}">
   <div class="container products">

        {{#each products}}
            <div id="{{this._id}}" class="card product">
                <h3 class="product__title">Titulo: {{this.title}}</h3>
                <p>Descripcion: {{this.description}}</p>
                <p>Categoria: {{this.category}}</p>
                <p>Precio: ${{this.price}} MXN</p>
                <p>Stock: {{this.stock}} pzs</p>
                <div>
                    <label for="quantity-{{this.id}}">Quantity:</label>
                    <input type="number" id="quantity-{{this.id}}" name="quantity" value="1" min="1">
                </div>
                <button class="btn btn-form add-to-cart form__button"  data-product-id="{{this._id}}">Agregar al carrito</button>
            </div>
        {{/each}}
</div>

    <div class="buttonContainer">
        {{#if pagination.hasPrevPage}}
            <button class="btn-form">
                <a href="/products?page={{pagination.prevPage}}&limit={{pagination.limit}}&sort={{query.sort}}&category={{query.category}}">Prev</a>
            </button>
        {{/if}}

        <span class="page">page {{pagination.page}} of {{pagination.totalPages}}</span>

        {{#if pagination.hasNextPage}}
            <button class="btn-form">
                <a href="/products?page={{pagination.nextPage}}&limit={{pagination.limit}}&sort={{query.sort}}&category={{query.category}}">Next</a>
            </button>
        {{/if}}
    </div>
</div>




